@model HWebTS.Models.TypeTransfer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<div class="card">
    <div class="card-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>TypeTransfer</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.DescType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DescType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DescType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Create" class="ladda-button btn btn-blue ">
                            <img src="../../images/icon/save.png" />&nbsp;&nbsp;Save
                        </button>

                        <a href="@Url.Action("Index")" title="Back to List" class="ladda-button btn btn-danger">
                            <img src="../../images/icon/cancel.png" />&nbsp;&nbsp;Cancel
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

