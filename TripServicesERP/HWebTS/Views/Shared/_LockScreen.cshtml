<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @ViewBag.Title@:-Trip Services
        }
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <style>
         .bgpage {
        background-color: black;
        background-image: url("../../Content/metis/img/pattern/vancouver.jpg");
        background-repeat: no-repeat;
        background-size: 100%;
        z-index: 0;
    }
    </style>

    <!-- App css -->
    <link href="~/Ubold/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Ubold/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Ubold/assets/css/app.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="bgpage authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-pattern">

                        <div class="card-body p-4">

                            @RenderBody()

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-red-50">Not you? return <a href="~/Account/Login" class="text-white ml-1"><b>Sign In</b></a></p>
                        </div> <!-- end col -->
                    </div>

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->


    <footer class="footer footer-alt">
        2018 - 2019 &copy; Trip Services by <a href="http://www.a2lean.com" target="_blank">AJ Development</a>
    </footer>

    <!-- Vendor js -->
    <script src="~/Ubold/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/Ubold/assets/js/app.min.js"></script>

</body>
</html>