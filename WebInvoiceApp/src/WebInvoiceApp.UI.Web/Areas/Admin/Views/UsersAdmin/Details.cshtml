@using WebInvoiceApp.UI.Web..Models
@using Microsoft.AspNet.Identity.Owin
@model WebInvoiceApp.Common.Identity.Users.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <h4 class="modal-title">User Details</h4>
        </div>
        <div class="modal-body">
            <div>
                <h4>Usuário</h4>
                <hr />
                <div class="text-left">
                    <dl class="dl-horizontal" style="width:100%;">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FullName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FullName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                    </dl>
                </div>

            </div>
            <h4>Lista de Roles para este usuário</h4>
            @if (ViewBag.RoleNames.Count == 0)
            {
                <hr />
                <p>Usuário não pertence a nenhuma Role.</p>
            }
            else
            {
                <table class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                    @foreach (var item in ViewBag.RoleNames)
                    {
                        <tr>
                            <td>
                                @item
                            </td>
                        </tr>
                    }
                </table>
            }
            @*<h4>Lista de Claims para este usuário</h4>
                @if (ViewBag.Claims.Count == 0)
                {
                    <hr />
                    <p>Usuário não possui nenhum Claim.</p>
                }
                else
                {
                    <table class="table">
                        <tr class="table-bordered">
                            <td>
                                <b>Nome da Claim</b>
                            </td>
                            <td>
                                <b>Valor da Claim</b>
                            </td>
                        </tr>
                        @foreach (var item in ViewBag.Claims)
                        {
                            <tr>
                                <td>
                                    @item.Type
                                </td>
                                <td>
                                    @item.Value
                                </td>
                            </tr>
                        }
                    </table>
                }*@
        </div>
    </div>
</div>


