@model List<WebInvoiceApp.UI.Web.Models.Invoice>

@{
    ViewBag.Title = "Invoice List";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}


        <div class="form-group" style="margin-left:10px;">
            <br />
            @Html.ActionLink("  Create New Invoice", "Create", null, new { @class = "btn btn-primary fa fa-check-square-o" })
        </div>
        <div class="box animated fadeInRightBig">

            <div class="box-body" style="margin-left:10px;">
                <table id="basic-datatables" class="table table-striped table-bordered table-hover nowrap" style="font-size:10pt;" cellspacing="0" width="99%">
                    <thead>
                        <tr>
                            <th scope="col" style="width:7%;"></th>
                            <th>
                                Invoice
                            </th>
                            <th>
                                Client
                            </th>
                            <th>
                                Issuer
                            </th>
                            <th>
                                Issue_Date
                            </th>
                            <th>
                                Due_Date
                            </th>
                            <th>
                                Note
                            </th>
                            <th>
                                SubTotal
                            </th>
                            <th>
                                Total
                            </th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    @Html.ActionLink(" ", "Edit", new { id = item.NumInvoice }, new { @class = "fa fa-edit", title = "Edit Invoice" })&nbsp;&nbsp;|&nbsp;&nbsp;

                                    @Html.ActionLink(" ", "DetailsInv", new { id = item.NumInvoice }, new { @class = "fa fa-copy text-success", title = "Details Invoice" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumInvoice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.NameClient)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Issuer.NameIssuer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IssueDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DueDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SubTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>

        </div>
