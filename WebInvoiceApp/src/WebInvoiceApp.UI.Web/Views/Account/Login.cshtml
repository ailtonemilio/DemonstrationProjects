@model WebInvoiceApp.Common.Identity.Users.LoginViewModel
@{
    ViewBag.Title = "Login2";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    //cria a tag do formulário
    @Html.AntiForgeryToken()
    // previne o ataque CSRF

    <form class="form-horizontal mt0" action="index.html" id="login-form" role="form">
        <div class="form-group">
            <div class="col-lg-12">
                <div class="input-group input-icon">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(Model => Model.Alias, new { @class = "form-control", placeholder = "username", autofocus = "autofocus", required = "required" })
                    @Html.ValidationMessageFor(Model => Model.Alias, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <div class="input-group input-icon">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control text-danger", placeholder = "password", required = "required", type = "password" })
                    @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                </div>
                <span class="help-block text-right"><a href="#">Forgout password ?</a></span>
            </div>
        </div>
        <div class="form-group mb0">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                <div class="checkbox-custom">
                    <input type="checkbox" name="remember" id="remember" value="option">
                    <label for="remember">Remember me ?</label>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 mb25">
                <button type="submit" class="btn btn-primary btn-block btn-flat" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing Order">Sign In</button>
            </div>
        </div>
    </form>
    <div class="col-12 forgot">
        <br />
        @if (@ViewBag.Message != null)
        {
            <div class="alert alert-danger fade in">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="glyphicon glyphicon-ban-circle alert-icon "></i>
                <strong>Oh Error!</strong> @ViewBag.Message
            </div>
        }
    </div>

}

@section Scripts {

    <script>
        $('.btn').on('click', function () {
            var $this = $(this);
            $this.button('Checking user');
            setTimeout(function () {
                $this.button('reset');
            }, 8000);
        });
    </script>

}

